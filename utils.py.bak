class UserQuitException(Exception):
    message = "I don't know how to deal with rejection!"

def save_and_quit():
    raise UserQuitException

def handle_user_input(message):
    print message
    user_input = ''
    while user_input in ['']:
        user_input = raw_input('>> ').lower()
    if user_input in ['quit', 'q']:
        save_and_quit()
    return user_input
